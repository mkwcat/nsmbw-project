#pragma once

#include <type_traits>

namespace std
{

template <class T, class U>
concept same_as = std::is_same_v<T, U>;

template <class T>
concept integral = std::is_integral_v<T>;

template <class T>
concept unsigned_integral = std::integral<T> && !std::is_signed_v<T>;

template <class T, class U>
concept convertible_to = std::is_convertible_v<T, U>;

} // namespace std